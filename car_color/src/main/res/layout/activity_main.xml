<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	xmlns:tools="http://schemas.android.com/tools"
	android:orientation="vertical"
	android:background="#00bfff"
	tools:context=".MainActivity">

    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        >
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_news" 
        android:textSize="25sp"
        />
    </LinearLayout>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_weight="3"
        >
	    <FrameLayout   
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content">
	        <ImageView
	            android:id="@+id/show_view"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:background="@mipmap/ic_launcher"
	            />
	    </FrameLayout>
    </LinearLayout>
    
	<LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_weight="1"
        >
	<TableLayout 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    >
	 <TableRow 
	     android:layout_width="match_parent"
	     android:layout_height="wrap_content"
	     >
	    <TextView 
		     android:layout_width="match_parent"
		     android:layout_height="wrap_content"
		     android:text="WiFi name:"
		     android:textSize="15sp"
		     android:gravity="center_horizontal"
		     android:layout_weight="1"
	     /> 
	    <TextView
	         android:id="@+id/wifi_ip" 
		     android:layout_width="match_parent"
		     android:layout_height="match_parent"
		     android:gravity="center_horizontal"
		     android:text="IP"
		     android:layout_weight="7"
		     android:textSize="15sp"
	     /> 
	 </TableRow>
 	 <TableRow 
	     android:layout_width="match_parent"
	     android:layout_height="wrap_content"
	     >
	    <TextView 
		     android:layout_width="match_parent"
		     android:layout_height="wrap_content"
		     android:text="Camera IP:"
		     android:textSize="15sp"
		     android:gravity="center_horizontal"
		     android:layout_weight="1"
	     /> 
	    <TextView
	         android:id="@+id/Camera_ip" 
		     android:layout_width="match_parent"
		     android:layout_height="match_parent"
		     android:gravity="center_horizontal"
		     android:text="IP"
		     android:layout_weight="7"
		     android:textSize="15sp"
	     /> 
	 </TableRow>
	 
	 <TableRow 
	     android:layout_width="match_parent"
	     android:layout_height="wrap_content"
	     >
	    <TextView 
		     android:layout_width="match_parent"
		     android:layout_height="match_parent"
		     android:text="颜色:"
		     android:textSize="15sp"
		     android:gravity="center_horizontal"
		     android:layout_weight="0.5"
	     /> 
	    <TextView 
		     android:layout_width="match_parent"
		     android:layout_height="match_parent"
		     android:gravity="center_horizontal"
		     android:text="数值"
		     android:layout_weight="6"
		     android:textSize="15sp"
	     /> 
	    <TextView 
		     android:layout_width="match_parent"
		     android:layout_height="match_parent"
		     android:gravity="center_horizontal"
		     android:text="阈值上限"
		     android:layout_weight="4"
		     android:textSize="13sp"
	     /> 
	     <TextView 
		     android:layout_width="match_parent"
		     android:layout_height="match_parent"
		     android:gravity="center_horizontal"
		     android:text="阈值下限"
		     android:layout_weight="4"
		     android:textSize="13sp"
	     /> 
	 </TableRow>
	 <TableRow 
	     android:layout_width="match_parent"
	     android:layout_height="wrap_content"
	     >
	    <TextView 
		     android:layout_width="match_parent"
		     android:layout_height="wrap_content"
		     android:text="红色:"
		     android:textSize="15sp"
		     android:gravity="center_horizontal"
		     android:layout_weight="0.5"
	     /> 
	    <TextView
	         android:id="@+id/r_num" 
		     android:layout_width="match_parent"
		     android:layout_height="wrap_content"
		     android:gravity="center_horizontal"
		     android:text="00"
		     android:layout_weight="6"
		     android:textSize="15sp"
	     /> 
	    <EditText
	        android:id="@+id/r_max" 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:text="00"
	        android:layout_weight="4"
	        android:gravity="center_horizontal"
	        android:inputType="number"
	        />
    	<EditText
    	    android:id="@+id/r_min" 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:text="00"
	        android:layout_weight="4"
	        android:gravity="center_horizontal"
        	android:inputType="number"/>
	 </TableRow>
	 <TableRow 
	     android:layout_width="match_parent"
	     android:layout_height="wrap_content"
	     >
	    <TextView
		     android:layout_width="match_parent"
		     android:layout_height="wrap_content"
		     android:text="绿色:"
		     android:textSize="15sp"
		     android:gravity="center_horizontal"
		     android:layout_weight="0.5"
	     /> 
	    <TextView
	         android:id="@+id/g_num"   
		     android:layout_width="match_parent"
		     android:layout_height="wrap_content"
		     android:gravity="center_horizontal"
		     android:text="00"
		     android:layout_weight="6"
		     android:textSize="15sp"
	     /> 
	    <EditText
	        android:id="@+id/g_max" 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:text="00"
	        android:layout_weight="4"
	        android:gravity="center_horizontal"
	        android:inputType="number"/>
    	<EditText
    	    android:id="@+id/g_min" 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:text="00"
	        android:layout_weight="4"
	        android:gravity="center_horizontal"
        	android:inputType="number"/>
	 </TableRow>
	 <TableRow 
	     android:layout_width="match_parent"
	     android:layout_height="wrap_content"
	     >
	    <TextView 
		     android:layout_width="match_parent"
		     android:layout_height="wrap_content"
		     android:text="蓝色:"
		     android:textSize="15sp"
		     android:gravity="center_horizontal"
		     android:layout_weight="0.5"
	     /> 
	    <TextView
	         android:id="@+id/blue_num"   
		     android:layout_width="match_parent"
		     android:layout_height="wrap_content"
		     android:gravity="center_horizontal"
		     android:text="00"
		     android:layout_weight="6"
		     android:textSize="15sp"
	     /> 
	    <EditText
	        android:id="@+id/blue_max" 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:text="00"
	        android:layout_weight="4"
	        android:gravity="center_horizontal"
	        android:inputType="number"/>
    	<EditText
    	    android:id="@+id/blue_min" 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:text="00"
	        android:layout_weight="4"
	        android:gravity="center_horizontal"
        	android:inputType="number"/>
	 </TableRow>
	 <TableRow 
	     android:layout_width="match_parent"
	     android:layout_height="wrap_content"
	     >
	    <TextView 
		     android:layout_width="match_parent"
		     android:layout_height="wrap_content"
		     android:text="黄色:"
		     android:textSize="15sp"
		     android:gravity="center_horizontal"
		     android:layout_weight="0.5"
	     /> 
	    <TextView
	         android:id="@+id/y_num"  	         
		     android:layout_width="match_parent"
		     android:layout_height="wrap_content"
		     android:gravity="center_horizontal"
		     android:text="00"
		     android:layout_weight="6"
		     android:textSize="15sp"
	     /> 
	    <EditText
	        android:id="@+id/y_max" 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:text="00"
	        android:layout_weight="4"
	        android:gravity="center_horizontal"
	        android:inputType="number"/>
    	<EditText
    	    android:id="@+id/y_min" 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:text="00"
	        android:layout_weight="4"
	        android:gravity="center_horizontal"
        	android:inputType="number"/>
	 </TableRow>
	 <TableRow 
	     android:layout_width="match_parent"
	     android:layout_height="wrap_content"
	     >
	    <TextView 
		     android:layout_width="match_parent"
		     android:layout_height="wrap_content"
		     android:text="品色:"
		     android:textSize="15sp"
		     android:gravity="center_horizontal"
		     android:layout_weight="0.5"
	     /> 
	    <TextView
	         android:id="@+id/s_num"  	         
		     android:layout_width="match_parent"
		     android:layout_height="wrap_content"
		     android:gravity="center_horizontal"
		     android:text="00"
		     android:layout_weight="6"
		     android:textSize="15sp"
	     /> 
	    <EditText
	        android:id="@+id/s_max" 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:text="00"
	        android:layout_weight="4"
	        android:gravity="center_horizontal"
	        android:inputType="number"/>
    	<EditText
    	    android:id="@+id/s_min"  
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:text="00"
	        android:layout_weight="4"
	        android:gravity="center_horizontal"
        	android:inputType="number"/>
	 </TableRow>
	 	 <TableRow 
	     android:layout_width="match_parent"
	     android:layout_height="wrap_content"
	     >
	    <TextView 
		     android:layout_width="match_parent"
		     android:layout_height="wrap_content"
		     android:text="青色:"
		     android:textSize="15sp"
		     android:gravity="center_horizontal"
		     android:layout_weight="0.5"
	     /> 
	    <TextView
	         android:id="@+id/c_num"   
		     android:layout_width="match_parent"
		     android:layout_height="wrap_content"
		     android:gravity="center_horizontal"
		     android:text="00"
		     android:layout_weight="6"
		     android:textSize="15sp"
	     /> 
	    <EditText
	        android:id="@+id/c_max"  
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:text="00"
	        android:layout_weight="4"
	        android:gravity="center_horizontal"
	        android:inputType="number"/>
    	<EditText
    	    android:id="@+id/c_min"  
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:text="00"
	        android:layout_weight="4"
	        android:gravity="center_horizontal"
        	android:inputType="number"/>
	 </TableRow>
	 <TableRow 
	     android:layout_width="match_parent"
	     android:layout_height="wrap_content"
	     >
	    <TextView 
		     android:layout_width="match_parent"
		     android:layout_height="wrap_content"
		     android:text="黑色:"
		     android:textSize="15sp"
		     android:gravity="center_horizontal"
		     android:layout_weight="0.5"
	     /> 
	    <TextView
	         android:id="@+id/black_num"   
		     android:layout_width="match_parent"
		     android:layout_height="wrap_content"
		     android:gravity="center_horizontal"
		     android:text="00"
		     android:layout_weight="6"
		     android:textSize="15sp"
	     /> 
	    <EditText
	        android:id="@+id/black_max"  
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:text="00"
	        android:layout_weight="4"
	        android:gravity="center_horizontal"
	        android:inputType="number"/>
    	<EditText
    	    android:id="@+id/black_min"  
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:text="00"
	        android:layout_weight="4"
	        android:gravity="center_horizontal"
        	android:inputType="number"/>
	 </TableRow>
	 <TableRow 
	     android:layout_width="match_parent"
	     android:layout_height="wrap_content"
	     >
	    <TextView 
		     android:layout_width="match_parent"
		     android:layout_height="wrap_content"
		     android:text="识别结果:"
		     android:textSize="15sp"
		     android:gravity="center_horizontal"
		     android:layout_weight="1"
	     /> 
	    <TextView
	         android:id="@+id/fruit_show"  
		     android:layout_width="match_parent"
		     android:layout_height="wrap_content"
		     android:gravity="center_horizontal"
		     android:text="无结果"
		     android:layout_weight="1"
		     android:textSize="15sp"
	     /> 
	 </TableRow>
	 
	</TableLayout>

    </LinearLayout>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <Button
            android:id="@+id/start_dis" 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="开始识别"
            android:onClick="myonClick"
            />
    </LinearLayout>
    
</LinearLayout>
